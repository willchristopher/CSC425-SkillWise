# syntax=docker/dockerfile:1
# Development Dockerfile for Frontend  
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies with cache mount for speed
RUN --mount=type=cache,target=/root/.npm \
    npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "start"]